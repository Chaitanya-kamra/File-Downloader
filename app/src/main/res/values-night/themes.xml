<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FileDownloader" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:popupMenuStyle">@style/popBackgroundStyle</item>
        <item name="android:listPreferredItemHeightSmall">41dp</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>
    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">

        <item name="backgroundTint">@color/white</item>

        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>

    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">20dp</item>
    </style>
    <style name="colorTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#F1F1F1</item>
    </style>

    <style name="popBackgroundStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/custom_popup_menu</item>
        <item name="android:dropDownWidth">30dp</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">#2B2F39</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
    </style>
    <style name="Theme.FileDownloader" parent="Base.Theme.FileDownloader" />
</resources>