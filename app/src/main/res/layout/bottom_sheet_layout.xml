<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    tools:visibility="gone">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:src="@drawable/ic_round_remove_24"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"/>


    <TextView
        android:id="@+id/bottomSheetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Settings"
        android:textColor="#2B2F39"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp" />

    <TextView
        android:id="@+id/tvMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Max Parallel Downloads"
        android:textColor="#6B6B6B"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/minSliderValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textSize="14sp"
            android:layout_marginTop="11dp"
            android:text="1" />
        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:background="@drawable/parallel_number_background"
            android:gravity="center">
        <TextView
            android:id="@+id/sliderValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"
            android:textColor="#72BD6C"
            android:text="@string/_4"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/maxSliderValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginTop="11dp"
            android:text="8" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:max="8"
        android:min="1"
        android:progressTint="#72BD6C"
        android:thumb="@drawable/ic_seekbar"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backButton"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_hollow_rounded"
            android:layout_weight="1"
            android:padding="18dp"
            android:text="Close"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="#2B2F39"
            android:layout_marginEnd="14dp"/>

        <Button
            android:id="@+id/updateButton"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#892EFF"
            android:padding="18dp"
            android:textStyle="bold"
            android:text="Update"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>

</LinearLayout>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
>
<ImageView
    android:layout_width="48dp"
    android:layout_height="4dp"
    android:src="@drawable/ic_round_remove_24"
    android:layout_gravity="center|top"
    android:scaleType="centerCrop"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="14dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/white"
        android:progressDrawable="@drawable/custom_download_progress"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="14sp"/>


</LinearLayout>
</LinearLayout>

